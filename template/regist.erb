<%= render("_html_header.erb") %>
<h1>会員登録するぞい</h1>
<form action="" method="post">
ユーザID<br/>
<input type="text" name="name" value=""/><br/>
パスワード(text属性なのは茶目っ気)<br/>
<input type="text" name="passwd" value=""/><br/>
<input type="submit" value="登録するぞい"/><br/>
</form>


<% if !c[:e].nil? %>
	<% if c[:e].class == Error_multi_412 %>
  		<% error_list = c[:e].exceptions %>
	<% else %>
  		<% error_list = [c[:e]] %>
	<% end %>

	<% error_list.each do |e| %>
		<%= CGI.escapeHTML(e.message)%><br/>
	<% end %>
<% end %>

<% if !c[:user].nil? %>
	<%= CGI.escapeHTML(c[:user].name) + "を登録したよ" %><br/>
<% end %>


<%= render("_html_footer.erb") %>
